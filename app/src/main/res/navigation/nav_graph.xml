<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/postFragment">

    <fragment
        android:id="@+id/postFragment"
        android:name="pl.vemu.zsme.ui.post.Post"
        android:label="@string/post"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_post_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <deepLink app:uri="zsme.tarnow.pl" />
        <argument
            android:name="author"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="pl.vemu.zsme.ui.detail.DetailFragment"
        android:label="@string/post"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detailFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <deepLink app:uri="zsme.tarnow.pl/wp/{url}" />
        <argument
            android:name="postModel"
            app:argType="pl.vemu.zsme.data.model.PostModel" />
        <action
            android:id="@+id/action_detailFragment_to_newsFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/timetableFragment"
        android:name="pl.vemu.zsme.ui.timetable.TimetableFragment"
        android:label="@string/timetable"
        tools:layout="@layout/fragment_timetable">
        <action
            android:id="@+id/action_timetableFragment_to_lessonFragment"
            app:destination="@id/lessonFragment"
            app:enterAnim="@anim/open_enter"
            app:exitAnim="@anim/open_exit"
            app:popEnterAnim="@anim/close_enter"
            app:popExitAnim="@anim/close_exit" />
        <deepLink app:uri="https://zsme.tarnow.pl/plan/" />
        <deepLink app:uri="zsme://timetable" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="pl.vemu.zsme.ui.more.More"
        android:label="@string/more">
        <action
            android:id="@+id/action_moreFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_moreFragment_to_contactFragment"
            app:destination="@id/contactFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <deepLink app:uri="zsme://more" />
    </fragment>
    <fragment
        android:id="@+id/lessonFragment"
        android:name="pl.vemu.zsme.ui.timetable.LessonFragment"
        tools:layout="@layout/fragment_timetable">
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="pl.vemu.zsme.ui.more.SettingsFragment"
        android:label="@string/settings" />
    <fragment
        android:id="@+id/contactFragment"
        android:name="pl.vemu.zsme.ui.more.ContactFragment"
        android:label="@string/contact">
        <deepLink app:uri="zsme.tarnow.pl/wp/kontakt/" />
    </fragment>
    <fragment
        android:id="@+id/galleryFragment"
        android:name="pl.vemu.zsme.ui.detail.GalleryFragment"
        android:label="@string/gallery">
        <argument
            android:name="images"
            app:argType="string[]" />
    </fragment>
</navigation>