<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="pl.vemu.zsme.ui.timetable.TimetableFragmentDirections" />

        <import type="androidx.navigation.Navigation" />

        <variable
            name="model"
            type="pl.vemu.zsme.data.model.TimetableModel" />
    </data>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{model.name}"
        android:textSize="18sp"
        android:layout_margin="8dp"
        tools:text="@tools:sample/lorem"
        android:onClick="@{Navigation.createNavigateOnClickListener(TimetableFragmentDirections.actionTimetableFragmentToLessonFragment(model.url, model.name))}" />
</layout>