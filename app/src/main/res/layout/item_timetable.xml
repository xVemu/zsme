<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="pl.vemu.zsme.timetableFragment.timetable.TimetableFragmentDirections" />

        <import type="androidx.navigation.Navigation" />

        <variable
            name="viewmodel"
            type="pl.vemu.zsme.timetableFragment.timetable.Timetable" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:onClick="@{Navigation.createNavigateOnClickListener(TimetableFragmentDirections.actionTimetableFragmentToLessonFragment(viewmodel.url, viewmodel.name))}">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewmodel.name}"
            android:textSize="18sp" />

    </LinearLayout>
</layout>